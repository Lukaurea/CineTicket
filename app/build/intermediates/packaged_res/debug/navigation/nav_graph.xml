<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.IFAM.PDM.cineticket.Fragments.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_cadastroFragment"
            app:destination="@id/cadastroFragment" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.IFAM.PDM.cineticket.Fragments.HomeFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_movieDetailFragment"
            app:destination="@id/movieFragment">
            <argument
                android:name="movieId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/cinemasFragment"
        android:name="com.IFAM.PDM.cineticket.Fragments.CinemasFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_cinemas" />

    <fragment
        android:id="@+id/ticketsFragment"
        android:name="com.IFAM.PDM.cineticket.Fragments.TicketsFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_tickets" />

    <fragment
        android:id="@+id/configsFragment"
        android:name="com.IFAM.PDM.cineticket.Fragments.ConfigsFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_configs">
        <action
            android:id="@+id/action_configsFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.IFAM.PDM.cineticket.Fragments.MovieFragment"
        android:label="Movie Detail Fragment"
        tools:layout="@layout/movie">
    </fragment>

    <fragment
        android:id="@+id/cadastroFragment"
        android:name="com.IFAM.PDM.cineticket.Fragments.CadastroFragment"
        android:label="fragment_cadastro"
        tools:layout="@layout/fragment_cadastro">

        <action
            android:id="@+id/action_cadastroFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


</navigation>